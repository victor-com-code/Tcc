
@model Tcc_Senai.Models.Professor

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cadastrar professor</title>
</head>
<body>

<hr />
<div class="container">
    
        <div class="col-12 col-sm-12 col-md-6 offset-md-3">
             <h2 class="title-view">Cadastro de professor</h2>
             <form asp-action="Create">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="form-group">
                     <label asp-for="NomeCompleto" class="control-label"></label>
                     <input asp-for="NomeCompleto" class="form-control" />
                     <span asp-validation-for="NomeCompleto" class="text-danger"></span>
                 </div>
                 <div class="form-group">
                     <label asp-for="TipoDeContrato" class="control-label"></label>
                     <input asp-for="TipoDeContrato" class="form-control" />
                     <span asp-validation-for="TipoDeContrato" class="text-danger"></span>

                 </div>
                 <div class="form-group">
                     <label asp-for="HorarioDeTrabalho" class="control-label"></label>
                     <input asp-for="HorarioDeTrabalho" class="form-control" />
                     <span asp-validation-for="HorarioDeTrabalho" class="text-danger"></span>
                 </div>
                 <div class="form-group">
                     <label asp-for="CargaHorariaSemanal" class="control-label"></label>
                     <input asp-for="CargaHorariaSemanal" class="form-control" />
                     <span asp-validation-for="CargaHorariaSemanal" class="text-danger"></span>
                 </div>
                 <div class="btn-icons" ,>
                     <a asp-action="Index" class="i-font-50">
                         <i class="fas fa-chevron-circle-left"></i>
                     </a>
                     <button class="btn-submit i-font-50"><i class="fas fa-save"></i></button>
                 </div>
             </form>
        </div>
</div>

 
     
