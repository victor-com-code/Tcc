@model IEnumerable<Tcc_Senai.Models.Turma>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.18/css/jquery.dataTables.min.css"
              asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        
    </environment>
}
@if (@TempData["Message"] != null)
{ 
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
<div class="card-block">
    <div class="card-header text-white bg-primary text-center h1">
        Turmas
    </div>
    <div class="card-body">
        <table id="tabela_turmas">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Periodo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeTurma)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Curso.NomeCurso)

                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Periodo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeTurma)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Curso.NomeCurso)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdTurma">Editar</a> |


                        <a asp-action="Delete" asp-route-id="@item.IdTurma">Deletar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer bg-success text-center">
        <a asp-action="Create" class="btn-success">
            Cadastrar Turma
        </a>
    </div>
</div>
@section  ScriptPage {
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="//cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js"
                asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js">
        </script>
    </environment>
    <script type="text/javascript">
$(document).ready(function () {
$('#tabela_turmas').DataTable({
"order": [[1, "asc"]]
});
});
    </script>
} 

